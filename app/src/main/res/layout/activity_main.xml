<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        tools:context=".MainActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF4500"
            android:text="FLAT UI KIT"
            android:gravity="center"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="46dp"
            android:textColor="#fff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:background="#FFA500"/>
            <TextView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:textColor="#fff"
                android:text="9:30"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/view2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="1dp"
                android:text="AN 10,2019"
                android:textColor="#fff"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:src="@mipmap/sun"
                android:layout_marginLeft="36dp"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:layout_below="@id/image1"
                android:text="28"
                android:textColor="#fff"
                android:layout_marginHorizontal="60dp"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/view3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText3"
                android:text="NEW YORK"
                android:gravity="center"
                android:layout_marginHorizontal="49dp"
                android:textColor="#fff"
                />
            <ImageButton
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView"
                android:src="@mipmap/email"
                android:paddingVertical="8dp"
                android:layout_marginLeft="20dp"
                android:background="#00CED1"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_toRightOf="@id/textView"
                android:src="@mipmap/cloudcomputing"
                android:background="#000"
                android:paddingVertical="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="26dp"
            android:layout_weight="1"
            android:background="#FF4500"
            android:drawableLeft="@mipmap/search"
            android:gravity="center"
            android:paddingVertical="26dp"
            android:paddingLeft="40dp"
            android:text="WWW"
            android:textColor="#fff"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/clock"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:paddingVertical="30dp"
            android:background="#FFA500"/>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00CED1"
        android:text="NOW PLAYING"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="40dp"
        android:drawableLeft="@mipmap/musicplayer"
        android:paddingVertical="26dp"
        android:drawablePadding="20dp"
        android:paddingLeft="30dp"/>

    </>